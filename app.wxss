/**app.wxss**/

/* 封装缝隙 */
.divider{
  height: 20rpx;
  background: #f1f1f1;
}
.lin{
  width: 692rpx;
  height: 1rpx;
  background: #f1f1f1;
}
/* 封装箭头 */
.arrow{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.arrow::after{
  content: "";
  width: 15rpx;
  height: 15rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);
  display: block;
}
/* 水平垂直居中 */
.center{
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 封装列表 */
.cell{
  font-size: 16px;
  background-color: #fff;
}
.cell-item{
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 30rpx;
}

/* 封装星星评分 */
.star-after{
  color: #e2e2e2;
}
.star-before{
  color: #f19e38;
  position: absolute;
  top: 0;
  left: 0;
  width: 90%;
  overflow: hidden;
}
/* 封装单行超出宽度显省略号 */
.ell{
  overflow: hidden;

  /* 不换行 */
  white-space: nowrap;
  /* 超出宽度变省略 */
  text-overflow: ellipsis;
}

image {
  width: 100%;
  height: 100%;
}

/* 功能封装9：加载更多样式 */

.loadmore {
    color: #888;
    font-size: 16px;
    line-height: 100rpx;
    text-align: center;
}

.loadmore.loading::before {
    content: '';
    width: 40rpx;
    height: 40rpx;
    margin-top: -10rpx;
    margin-right: 10rpx;
    display: inline-block;
    vertical-align: middle;
    animation: loading 1s steps(12) infinite;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
}

@keyframes loading {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(-360deg);
    }
}
