  top: 40rpx;
  left: 0;
  color:rgba(255,255,255,1);
  font-size: 26rpx;
  text-align: center;
  line-height: 51rpx;
}
.guoqi{
  background:rgba(153,153,153,1);
}
.nianhui:nth-child(1){
  margin-top:0;
