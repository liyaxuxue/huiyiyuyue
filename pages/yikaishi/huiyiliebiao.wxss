.huiyi-liebiao{
  border-top: 1rpx solid #ccc;
  padding: 24rpx 32rpx;
  box-sizing: border-box;
}
.nianhui{
  height: 490rpx;
  margin-top: 40rpx;
  position: relative;
}
.huodong{
  width:130rpx;
  height:51rpx;
  background:rgba(205,48,39,1);
  border-radius:0rpx 26rpx 26rpx 0rpx;
