}

.cell{
  width: 934rpx;
  display: flex;
  transition: transform 0.2s ease 0s;
  padding: 28rpx 0;
  position: relative;
}
.cell.on{
  transform: translateX(-180rpx);
}
.collect{

  text-align: center;
  margin-left: 20rpx;
  width:154rpx;
  height:99rpx;
  border:1px solid rgba(221,221,221,1);
  border-radius:6rpx;
  padding: 14rpx ;
  box-sizing: border-box;
}
